<div class="valign-wrapper" style="width:100%;height:100%;position: absolute;">
  <div class="valign" style="width:100%;">
    <div class="container center-align">
      <div class="row">
        <div class="col s6 push-s3">
          <div class="card">
            <div class="card-content">
              <div class="center-align">
                <span class="simpletitle">Register for QuizzInc</span>
              </div>
              <form id="signup-form" class="signup">
                <div class="row">
                  <div class="input-field col s12">
                    <label for="email-input" class="active"></label>
                    <i class="material-icons prefix">account_circle</i>
                    <input type="email" class="validate" id="email-input" placeholder="Email">
                  </div>
                </div>
                <div class="row">
                  <div class="input-field col s12">
                    <label for="password-input" class="active"></label>
                    <i class="material-icons prefix">lock</i>
                    <input type="password" class="validate" id="password-input" placeholder="Password">
                  </div>
                </div>
                <div class="card-action">

                  <div class="center-align">
                    <button type="submit" class="btn btn1">Sign Up</button>
                  </div>
                  <div class="center-align orlogin">
                    <a href="/login"><span class="orlogin"> Login here </span></a>
                  </div>
                </div>
              </form>
            </div>


          </div>
        </div>
      </div>
    </div>
  </div>
</div>
