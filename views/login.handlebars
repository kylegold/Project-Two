<div class="valign-wrapper" style="width:100%;height:100%;position: absolute;">
  <div class="valign" style="width:100%;">
    <div class="container">
      <div class="row">
        <div class="col s12 m6 offset-m3">
          <div class="card">
            <div class="card-content">
              <span class="card-title black-text">Sign In</span>
              <form id="login-form" class="login">
                <div class="row">
                  <div class="input-field col s12">
                    <label for="email-input" class="active">Email address</label>
                    <input type="email" class="validate" id="email-input" placeholder="Email">
                  </div>
                </div>
                <div class="row">
                  <div class="input-field col s12">
                    <label for="password-input" class="active">Password</label>
                    <input type="password" class="validate" id="password-input" placeholder="Password">
                  </div>
                </div>

              </form>
            </div>
            <div class="card-action">
              <button type="submit" class="btn">Login</button>
              <p>Or sign up <a href="/">here</a></p>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
